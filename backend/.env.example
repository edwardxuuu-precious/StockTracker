# Application
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
SECRET_KEY=your-secret-key-change-this

# Database
DATABASE_URL=sqlite:///./stocktracker.db

# LLM Configuration
LLM_PROVIDER=deepseek
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# OpenRouter (backup/testing)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
AGENT_REQUIRE_LLM=true
AGENT_STARTUP_CHECK_LLM=true
AGENT_STARTUP_PROBE_LLM=true
AGENT_STARTUP_LLM_TIMEOUT_SECONDS=8.0
AGENT_LLM_TIMEOUT_SECONDS=90.0
AGENT_LLM_MAX_RETRIES=3
AGENT_LLM_RETRY_BASE_SECONDS=1.0
AGENT_LLM_RETRY_MAX_SECONDS=8.0

# Stock Data Providers
TUSHARE_TOKEN=your_tushare_token_optional
YFINANCE_TIMEOUT=10

# Cache Settings
CACHE_QUOTE_TTL=60
CACHE_HISTORY_TTL=3600

# Real-time Tracking
REALTIME_UPDATE_INTERVAL=60
ENABLE_WEBSOCKET=false

# Backtest
# Simulated backtest is disabled by default; enable only for legacy/demo.
ALLOW_SIM_BACKTEST=false

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
